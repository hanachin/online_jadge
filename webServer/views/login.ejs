<!-- modal window -->
<div id="loginModal" class="modal hide fade" style="font-size:18px">
  <form method="post" action="/select" style="margin-bottom:0px;">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
      <p id="myModalLabel">ユーザ名とパスワードを入力してください</p>
    </div>
    <div class="modal-body">
      <div class="loginform" style="width: 40%; margin: auto;">
          <p>ユーザ名</p>
          <p><input type="text" name="username" placeholder="Type username"></p>
          <p>パスワード</p>
          <p><input type="password" name="password" placeholder="Type password"></p>
      </div>
    </div>
    <div class="modal-footer" style="text-align: center;">
      <button type="submit" class="btn btn-large btn-primary" aria-hidden="true" style="margin-left:10px;">ログイン</button>
      <button class="btn btn-large" data-dismiss="modal" aria-hidden="true" style="margin-right:10px;">キャンセル</button>
    </div>
  </form>
</div>

